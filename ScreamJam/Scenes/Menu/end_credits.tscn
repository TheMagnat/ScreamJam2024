code = "shader_type canvas_item;


void fragment() {
	float t = TIME * 0.5;
	vec2 CENTER = abs(UV - vec2(0.5)) * (2.1 + cos(UV.x * 2.0 + cos(UV.y + t * 0.15315) + t) * 0.05);
	float dist = length(CENTER * CENTER * CENTER);

	if (dist > 1.0) {
		COLOR.rgb = vec3(sqrt(dist - 1.0) * 0.25);
	} else {
		COLOR.rgb = vec3(0.0);
	}
	COLOR.a = 1.0;
}

